#!/bin/bash

set -e
set -x

go install -v github.com/onsi/ginkgo/ginkgo

export CONFIG_PATH=${CONFIG_PATH:-$PWD/example-config.json}

#declare  test_suites
#test_suites=("$@")

ginkgo replicaset -r -nodes=1 -v -noColor=true -keepGoing=true -trace=true \
	-slowSpecThreshold=300 -timeout=600s

